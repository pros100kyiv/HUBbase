// ============================================
// NEO4J-СТИЛЬ: ВУЗЛИ (Nodes)
// ============================================
// Уніфіковане зберігання всіх вузлів графу (подібно до Neo4j)
enum NodeType {
  BUSINESS
  CLIENT
  MASTER
  SERVICE
  APPOINTMENT
  USER
  PAYMENT
  BROADCAST
}

model GraphNode {
  id         String   @id @default(cuid())
  nodeType   NodeType // Тип вузла
  originalId String   @unique // ID оригінальної сутності (з Business, Client, тощо)
  businessId String? // ID бізнесу (для ізоляції)
  // Властивості вузла (JSON для гнучкості)
  properties String // JSON: всі властивості вузла
  labels     String? // JSON: масив міток (labels) як в Neo4j
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Зв'язки (relationships)
  fromRelationships GraphRelationship[] @relation("FromNode")
  toRelationships   GraphRelationship[] @relation("ToNode")

  @@index([nodeType])
  @@index([originalId])
  @@index([businessId])
  @@index([createdAt])
}

// ============================================
// NEO4J-СТИЛЬ: ЗВ'ЯЗКИ (Relationships)
// ============================================
// Зв'язки між вузлами (подібно до Neo4j)
enum RelationshipType {
  OWNS // Business OWNS Client/Master/Service
  HAS // Business HAS Appointment
  PROVIDES // Master PROVIDES Service
  BOOKED_BY // Appointment BOOKED_BY Client
  PERFORMED_BY // Appointment PERFORMED_BY Master
  INCLUDES // Appointment INCLUDES Service
  PAYS // Client PAYS Payment
  RECEIVES // Business RECEIVES Payment
  SENDS // Business SENDS Broadcast
  BELONGS_TO // Service BELONGS_TO Business
  WORKS_FOR // Master WORKS_FOR Business
  CREATED_BY // Appointment CREATED_BY User
}

model GraphRelationship {
  id               String           @id @default(cuid())
  relationshipType RelationshipType // Тип зв'язку
  fromNodeId       String // ID вузла-джерела
  fromNode         GraphNode        @relation("FromNode", fields: [fromNodeId], references: [id], onDelete: Cascade)
  toNodeId         String // ID вузла-призначення
  toNode           GraphNode        @relation("ToNode", fields: [toNodeId], references: [id], onDelete: Cascade)
  businessId       String? // ID бізнесу (для ізоляції)
  // Властивості зв'язку (JSON для гнучкості)
  properties       String? // JSON: додаткові властивості зв'язку
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  @@unique([fromNodeId, toNodeId, relationshipType])
  @@index([relationshipType])
  @@index([fromNodeId])
  @@index([toNodeId])
  @@index([businessId])
  @@index([createdAt])
}

